@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    var RoleId = ViewBag.RoleId;
}

<h1>Add Or Remove Users</h1>
<form class="my-3" asp-action="AddOrRemoveUser"asp-route-roleId="@RoleId">

                   @for (var i = 0; i < Model.Count; i++)
                       {
                        <div class="form-check">
                               <input type="checkbox" asp-for="@Model[i].IsSelected" />
                              <label asp-for="@Model[i].UserName">@Model[i].UserName</label>
                
                        </div>
                    }
            
        </div>
       
            <div class="my-3">
                    <input type="submit" value="Update" class="btn btn-success" />
                    <a asp-action="Index" asp-controller="Roles" asp-route-id="@RoleId" class="btn btn-light">Cancel</a>
           
        </div>

</form>

